<!--miniprogram/pages/apply/apply.wxml-->
<view class="title">
  <text>报名比赛</text>
</view>

<form class="apply_form" bindsubmit="formSubmit" bindreset="formReset">
  <view class="apply_picker">
    <text class="main_text">比赛名称</text>
    <text class="side_text">\n请选择可参加比赛的名称</text>
    <picker class="real_picker">选择</picker>
  </view>
  <view class="hor-line"></view>
  <view class="apply_picker">
    <text class="main_text">比赛项目</text>
    <text class="side_text">\n请选择具体的比赛项目</text>
    <picker class="real_picker">选择</picker>
  </view>
  <button id="apply_button">提交</button>
</form>